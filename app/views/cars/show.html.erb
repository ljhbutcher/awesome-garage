<h1><%= @car.brand %> (<%= @car.model %>)</h1>
<h3><%= @car.year %></h3>
<h4><%= @car.fuel %></h4>
<h5>Owner: <%= @car.owner.nickname %></h5>
<%= image_tag @car.image_url, class: 'car-image' %>
<h2>Reviews:</h2>
<ul>
  <% @car.reviews.each do |review| %>
    <li>
      <strong>Rating:</strong> <%= review.rating %> - <%= review.comment %>
    </li>
  <% end %>
</ul>
<h3>Add a Review:</h3>
<%= simple_form_for [@car, @review] do |f| %>
  <div class="form-group">
    <%= f.input :comment, label: "Your Review", as: :text %>
    <%= f.input :rating, label: "Rating (1 to 5)", as: :select, collection: [1, 2, 3, 4, 5] %>
  </div>
  <div class="form-group">
    <%= f.button :submit, "Submit Review", class: "btn btn-primary" %>
  </div>
<% end %>

<h3>Favourites</h3>

<%= simple_form_for @car do |f| %>
  <%= f.button :submit, "Add to my garage", class: "btn btn-primary" %>
<% end %>
